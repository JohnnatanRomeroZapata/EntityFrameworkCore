@model EFCoreModels.Models.ViewModels.BookVM

@{
    var title = "Create Book";
}

<form method="post">
    <div class="row p-3 border">
       
        <input type="hidden" asp-for="@Model.Book.Id" />

        @if (Model.Book != null)
        {
            title = "Edit Book";
        }

        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>

        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="@Model.Book.Title"></label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.Book.Title" class="form-control" />
                    <span asp-validation-for="@Model.Book.Title" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="@Model.Book.ISBN"></label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.Book.ISBN" class="form-control" />
                    <span asp-validation-for="@Model.Book.ISBN" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="@Model.Book.Price"></label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.Book.Price" class="form-control" />
                    <span asp-validation-for="@Model.Book.Price" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="@Model.Book.PublisherId"></label>
                </div>
                <div class="col-8">
                   <select asp-for="@Model.Book.PublisherId" asp-items="@Model.PublisherList" class="form-control">
                        <option selected>-- Publisher List --</option>
                    </select>
                    @*@Html.DropDownListFor(u => u.Book.PublisherId, Model.PublisherList, "--Publisher List--",
                        new { @class = "form-control" })*@
                    <span asp-validation-for="@Model.Book.PublisherId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4 offset-4">
                    @if (Model.Book == null)
                    {
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    }
                </div>
                <div class="col-4">
                    <a asp-controller="Book" asp-action="IndexBook" class="btn btn-success form-control">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
   
}