@model EFCoreModels.Models.ViewModels.BookVM

@{
    var title = "Create Book Details";
}

<form method="post">
    <div class="row p-3 border">
        
        <input type="hidden" asp-for="@Model.Book.Id" />
        <input type="hidden" asp-for="@Model.Book.BookDetail.Id" />

        @if (Model.Book.Id != 0 || Model.Book.BookDetail.Id != 0)
        {
            title = "Edit Book Details";
        }

        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>

        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="@Model.Book.Title"></label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.Book.Title" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="@Model.Book.BookDetail.NumberOfChapters"></label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.Book.BookDetail.NumberOfChapters" class="form-control" />
                    <span asp-validation-for="@Model.Book.BookDetail.NumberOfChapters" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="@Model.Book.BookDetail.NumberOfPages"></label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.Book.BookDetail.NumberOfPages" class="form-control" />
                    <span asp-validation-for="@Model.Book.BookDetail.NumberOfPages" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4 offset-4">
                    @if (Model.Book.BookDetail != null)
                    {
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    }
                </div>
                <div class="col-4">
                    <a asp-controller="Book" asp-action="IndexBook" class="btn btn-success form-control">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

}